<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="85.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.pioneers.controller.PopUpController.TradeOfferPopUpController">
   <children>
      <HBox fx:id="tradeBox" alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="85.0" prefWidth="300.0" spacing="5.0">
         <children>
            <VBox fx:id="playerMe" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="60.0" prefWidth="50.0">
               <children>
                  <Label fx:id="meLabel" text="Me" />
                  <ImageView fx:id="playerAvatar" fitHeight="45.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
            <ImageView fx:id="offerArrow" fitHeight="20.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" translateY="10.0">
               <image>
                  <Image url="@../../../../../../../../../../../Desktop/tradeArrowGet.png" />
               </image>
            </ImageView>
            <HBox fx:id="resourcesHBoxOffer" alignment="CENTER" minWidth="50.0" spacing="5.0" translateY="10.0" />
            <HBox fx:id="resourcesHBoxGet" alignment="CENTER" minWidth="50.0" nodeOrientation="RIGHT_TO_LEFT" spacing="5.0" />
            <ImageView fx:id="getArrow" fitHeight="20.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" translateY="10.0">
               <image>
                  <Image url="@../../../../../../../../../../../Desktop/tradeArrow.png" />
               </image>
            </ImageView>
            <VBox fx:id="playerOther" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="60.0" prefWidth="50.0">
               <children>
                  <Label fx:id="otherLabel" text="Other" />
                  <ImageView fx:id="otherAvatar" fitHeight="45.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
            <VBox fx:id="buttonBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="85.0" prefWidth="60.0" spacing="10.0">
               <children>
                  <Button fx:id="accept" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="accept" textAlignment="CENTER" />
                  <Button fx:id="decline" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="decline" />
               </children>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
