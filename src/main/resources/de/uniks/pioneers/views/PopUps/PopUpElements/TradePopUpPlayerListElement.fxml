<?import javafx.scene.layout.VBox?>

<HBox fx:id="root" alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="60.0" prefWidth="150.0" xmlns="http://javafx.com/javafx/18"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.uniks.pioneers.controller.PopUpController.ElementController.TradePopUpPlayerListElementController">
    <VBox fx:id="playerBox" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="60.0" prefWidth="60.0">
        <HBox.margin>
            <Insets left="-10.0"/>
        </HBox.margin>
        <Label fx:id="playerNameLabel" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
               minHeight="-Infinity" minWidth="-Infinity" prefHeight="20.0" prefWidth="60.0" text="alice">
            <VBox.margin>
                <Insets top="-5.0"/>
            </VBox.margin>
        </Label>
        <ImageView fx:id="playerAvatar" fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </ImageView>
    </VBox>
    <ImageView fx:id="acceptedMark" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
        <HBox.margin>
          <Insets left="35.0"/>
        </HBox.margin>
    </ImageView>
</HBox>
